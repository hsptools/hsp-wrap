#!/usr/bin/env python
import os
import shutil
import re
from waflib import Logs

def build(bld):
    mpienv = bld.all_envs['mpicc']

    bld.program(source='src/hspwrap.c', target='hspwrap',
                use='GLIB2 YAML')

    bld.program(source='src/hspwrap-ev.c', target='hspwrap-ev',
                use='GLIB2 YAML ev M')

    #bld.program(target='hspwrap', source=src, 'src',
    #            use='M', env=mpienv)

    bld.recurse('libev-4.15')
